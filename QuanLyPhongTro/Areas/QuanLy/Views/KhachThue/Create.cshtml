<div id="tenantModal" class="modal fixed inset-0 z-50 hidden flex items-center justify-center bg-black bg-opacity-50">
    <div class="modal-content bg-white rounded-lg shadow-xl w-full max-w-lg">
        <div class="p-6 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-800">Thêm khách thuê mới</h3>
        </div>

        <form id="createTenantForm"
              asp-area="QuanLy"
              asp-controller="KhachThue"
              asp-action="Create"
              method="post"
              onsubmit="handleCreateTenant(event)">
            @Html.AntiForgeryToken()

            <div id="create-error-message"
                 class="p-4 text-red-700 bg-red-100 rounded-lg hidden"
                 role="alert"></div>

            <div class="p-6 space-y-4">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Họ tên</label>
                        <input name="HoTen"
                               type="text"
                               class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm"
                               required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">CCCD/CMND</label>
                        <input name="Cccd"
                               type="text"
                               class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm"
                               required>
                    </div>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Số điện thoại</label>
                        <input name="SoDienThoai"
                               type="tel"
                               class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm"
                               required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Ngày sinh</label>
                        <input name="NgaySinh"
                               type="date"
                               class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm">
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700">Địa chỉ (Quê quán)</label>
                    <input name="DiaChi"
                           type="text"
                           class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm">
                </div>
            </div>

            <div class="p-6 bg-gray-50 border-t border-gray-200 flex justify-end gap-3">
                <button type="button"
                        onclick="closeModal('tenantModal')"
                        class="btn-secondary px-4 py-2 rounded-lg">
                    Hủy
                </button>
                <button type="submit"
                        class="btn-primary text-white px-4 py-2 rounded-lg">
                    Lưu lại
                </button>
            </div>
        </form>
    </div>
</div>
