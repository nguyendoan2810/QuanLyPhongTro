<!-- Modal thêm khách thuê -->
<div id="createTenantModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4 modal-backdrop">
    <div class="bg-white rounded-xl max-w-lg w-full max-h-[90vh] overflow-y-auto shadow-lg bounce-in">
        <!-- Header -->
        <div class="p-6 border-b border-gray-200 flex justify-between items-center">
            <h3 class="text-lg font-semibold text-gray-800">Thêm khách thuê mới</h3>
            <button onclick="closeModal('createTenantModal')" class="text-gray-400 hover:text-gray-600 transition">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>

        <!-- Form nội dung -->
        <form id="createTenantForm" asp-area="QuanLy" asp-controller="KhachThue" asp-action="Create" method="post" onsubmit="handleCreateTenant(event)">
            @Html.AntiForgeryToken()

            <div class="p-6 space-y-4">
                <!-- Họ tên & CCCD -->
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Họ tên *</label>
                        <input type="text" name="HoTen" class="form-input w-full px-3 py-2 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500" placeholder="Nhập họ tên khách thuê" required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">CCCD/CMND *</label>
                        <input type="text" name="Cccd"
                               pattern="\d{12}"
                               maxlength="12"
                               class="form-input w-full px-3 py-2 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500"
                               placeholder="Nhập số CCCD/CMND"
                               required
                               title="CCCD phải gồm đúng 12 số">
                    </div>
                </div>

                <!-- SĐT & Ngày sinh -->
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Số điện thoại *</label>
                        <input type="tel" name="SoDienThoai"
                               pattern="0\d{9}"
                               maxlength="10"
                               class="form-input w-full px-3 py-2 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500"
                               placeholder="Nhập số điện thoại"
                               required
                               title="Số điện thoại phải gồm 10 số và bắt đầu bằng 0">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Ngày sinh</label>
                        <input type="date" name="NgaySinh" class="form-input w-full px-3 py-2 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500">
                    </div>
                </div>

                <!-- Địa chỉ -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Địa chỉ (Quê quán)</label>
                    <input type="text" name="DiaChi" class="form-input w-full px-3 py-2 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500" placeholder="Nhập địa chỉ / quê quán">
                </div>
            </div>

            <!-- Footer -->
            <div class="p-6 border-t border-gray-200 bg-gray-50 flex justify-end gap-3">
                <button type="button" onclick="closeModal('createTenantModal')" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition">
                    Hủy
                </button>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                    <i class="fas fa-save mr-2"></i>Lưu lại
                </button>
            </div>
        </form>
    </div>
</div>