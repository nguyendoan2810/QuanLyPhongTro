<!-- Modal sửa khách thuê -->
<div id="editTenantModal"
     class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4 modal-backdrop">
    <div class="bg-white rounded-xl max-w-lg w-full max-h-[90vh] overflow-y-auto shadow-lg bounce-in">
        <!-- Header -->
        <div class="p-6 border-b border-gray-200 flex justify-between items-center">
            <h3 class="text-lg font-semibold text-gray-800">Chỉnh sửa thông tin khách thuê</h3>
            <button onclick="closeModal('editTenantModal')" class="text-gray-400 hover:text-gray-600 transition">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>

        <!-- Form nội dung -->
        <form id="editTenantForm" method="post" onsubmit="handleEditTenant(event)">
            @Html.AntiForgeryToken()
            <input type="hidden" id="edit_MaKhach" name="MaKhach">

            <div class="p-6 space-y-4">
                <!-- Họ tên & CCCD -->
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label for="edit_HoTen" class="block text-sm font-medium text-gray-700 mb-2">Họ tên *</label>
                        <input id="edit_HoTen" name="HoTen" type="text" class="form-input w-full px-3 py-2 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500" placeholder="Nhập họ tên khách thuê" required>
                    </div>
                    <div>
                        <label for="edit_Cccd" class="block text-sm font-medium text-gray-700 mb-2">CCCD/CMND *</label>
                        <input id="edit_Cccd" name="Cccd" type="text" class="form-input w-full px-3 py-2 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500" placeholder="Nhập số CCCD/CMND" required>
                    </div>
                </div>

                <!-- Số điện thoại & Ngày sinh -->
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label for="edit_SoDienThoai" class="block text-sm font-medium text-gray-700 mb-2">Số điện thoại *</label>
                        <input id="edit_SoDienThoai" name="SoDienThoai" type="tel" class="form-input w-full px-3 py-2 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500" placeholder="Nhập số điện thoại" required>
                    </div>
                    <div>
                        <label for="edit_NgaySinh" class="block text-sm font-medium text-gray-700 mb-2">Ngày sinh</label>
                        <input id="edit_NgaySinh" name="NgaySinh" type="date" class="form-input w-full px-3 py-2 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500">
                    </div>
                </div>

                <!-- Địa chỉ -->
                <div>
                    <label for="edit_DiaChi" class="block text-sm font-medium text-gray-700 mb-2">Địa chỉ (Quê quán)</label>
                    <input id="edit_DiaChi" name="DiaChi" type="text" class="form-input w-full px-3 py-2 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500" placeholder="Nhập địa chỉ hoặc quê quán">
                </div>
            </div>

            <!-- Footer -->
            <div class="p-6 border-t border-gray-200 bg-gray-50 flex justify-end gap-3">
                <button type="button" onclick="closeModal('editTenantModal')" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition">
                    Hủy
                </button>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                    <i class="fas fa-save mr-2"></i>Cập nhật
                </button>
            </div>
        </form>
    </div>
</div>