<!-- Modal Sửa Phòng -->
<div id="roomEditModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4 modal-backdrop">
    <div class="bg-white rounded-xl max-w-lg w-full max-h-[90vh] overflow-y-auto shadow-lg bounce-in">
        <!-- Header -->
        <div class="p-6 border-b border-gray-200 flex justify-between items-center">
            <h3 class="text-lg font-semibold text-gray-800">Cập nhật thông tin phòng</h3>
            <button onclick="closeModal('roomEditModal')" class="text-gray-400 hover:text-gray-600">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>

        <!-- Nội dung form -->
        <div class="p-6">
            <form id="editPhongForm" class="space-y-4">
                @Html.AntiForgeryToken()
                <input type="hidden" name="MaPhong" />

                <!-- Tên phòng -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Tên phòng *</label>
                    <input type="text" name="TenPhong" class="form-input w-full px-3 py-2 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500" required placeholder="Nhập tên phòng">
                </div>

                <!-- Giá phòng -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Giá phòng (VNĐ) *</label>
                    <input type="number" name="GiaPhong" min="0" class="form-input w-full px-3 py-2 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500" required placeholder="Nhập giá phòng">
                </div>

                <!-- Trạng thái -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Trạng thái *</label>
                    <select name="TrangThai" class="form-input w-full px-3 py-2 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500" required>
                        <option value="Trống">Trống</option>
                        <option value="Đang thuê">Đang thuê</option>
                        <option value="Sửa chữa">Sửa chữa</option>
                    </select>
                </div>

                <!-- Tầng -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Tầng</label>
                    <input type="text" name="Tang" class="form-input w-full px-3 py-2 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500" placeholder="VD: Tầng 1">
                </div>

                <!-- Loại phòng -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Loại phòng *</label>
                    <select name="LoaiPhong" class="form-input w-full px-3 py-2 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500" required>
                        <option value="Đơn">Đơn</option>
                        <option value="Đôi">Đôi</option>
                    </select>
                </div>

                <!-- Diện tích -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Diện tích (m²)</label>
                    <input type="number" name="DienTich" min="0" step="0.1" class="form-input w-full px-3 py-2 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500" placeholder="VD: 25">
                </div>

                <!-- Địa chỉ -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Địa chỉ</label>
                    <input type="text" name="DiaChi" class="form-input w-full px-3 py-2 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500" placeholder="Nhập địa chỉ phòng trọ">
                </div>

                <!-- Mô tả -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Mô tả</label>
                    <textarea name="MoTa" rows="3" class="form-input w-full px-3 py-2 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500" placeholder="Nhập mô tả..."></textarea>
                </div>
            </form>
        </div>

        <!-- Footer -->
        <div class="p-6 border-t border-gray-200 flex justify-end space-x-3">
            <button type="button" onclick="closeModal('roomEditModal')" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition">
                Hủy
            </button>
            <button type="submit" form="editPhongForm" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition">
                <i class="fas fa-save mr-2"></i>Lưu thay đổi
            </button>
        </div>
    </div>
</div>
