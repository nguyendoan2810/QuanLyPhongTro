@{
    var dichvuList = ViewBag.DichVuList as List<QuanLyPhongTro.Models.DichVu>;
    dichvuList = dichvuList ?? new List<QuanLyPhongTro.Models.DichVu>();
}

<div id="services-section" class="section hidden">
    <div class="bg-white rounded-xl shadow-sm border border-gray-100">
        <div class="p-6 border-b border-gray-200">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <h3 class="text-lg font-semibold text-gray-800">Quản lý Dịch vụ</h3>
                <button onclick="openModal('serviceModal')" class="btn-primary text-white px-4 py-2 rounded-lg flex items-center">
                    <i class="fas fa-plus mr-2"></i>Thêm dịch vụ
                </button>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-6" id="dichVuListContainer">
            @if (dichvuList != null && dichvuList.Any())
            {
                @foreach (var dv in dichvuList)
                {
                    <div class="border border-gray-200 rounded-lg p-4 card-hover">
                        <div class="flex items-center justify-between mb-3">
                            <div class="flex items-center">
                                <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center mr-3">
                                    <i class="fas fa-cogs text-gray-600"></i>
                                </div>
                                <h4 class="font-semibold text-gray-800">@(dv.TenDv ?? "")</h4>
                            </div>
                            <span class="text-sm text-green-600 font-medium">Hoạt động</span>
                        </div>
                        <p class="text-2xl font-bold text-gray-900 mb-1">
                            @dv.DonGia.ToString("N0") VNĐ
                        </p>
                        <div class="flex space-x-2">

                            <button onclick="openEditServiceModal(@dv.MaDv, '@dv.TenDv', '@dv.DonGia')"
                                    class="flex-1 text-blue-600 border border-blue-600 px-3 py-2 rounded-lg text-sm hover:bg-blue-50">
                                <i class="fas fa-edit mr-1"></i>Sửa
                            </button>

                            <button onclick="openEditServiceModal(@dv.MaDv, '@dv.TenDv', '@dv.DonGia')"
                                   class=" flex-1 text-red-600 border border-red-600 px-3 py-2 rounded-lg text-sm hover:bg-red-50">
                                <i class="fas fa-trash mr-1"></i>Xóa
                            </button>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-gray-500 text-center py-4">Chưa có dữ liệu</p>
            }



        </div>
    </div>
</div>
@await Html.PartialAsync("~/Areas/QuanLy/Views/DichVu/Create.cshtml")

@await Html.PartialAsync("~/Areas/QuanLy/Views/DichVu/Edit.cshtml")