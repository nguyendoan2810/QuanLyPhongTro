<!-- Modal Quên mật khẩu -->
<div id="forgotModal"
     class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4 modal-backdrop">
    <div class="bg-white rounded-xl max-w-md w-full max-h-[90vh] overflow-y-auto bounce-in shadow-xl">
        <!-- Header -->
        <div class="p-6 border-b border-gray-200 flex justify-between items-center">
            <h3 class="text-lg font-semibold text-gray-800">Quên mật khẩu</h3>
            <button onclick="closeModal('forgotModal')"
                    class="text-gray-400 hover:text-gray-600 transition-colors">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>
        <!-- Body -->
        <div class="p-6 space-y-4">
            <p class="text-sm text-gray-600">
                Nhập email đăng ký. Hệ thống sẽ gửi mật khẩu tạm thời để đăng nhập.
            </p>
            <input type="email" id="forgotEmail"
                   class="form-input w-full px-3 py-2 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                   placeholder="Nhập email đăng ký" required />
            <div id="forgotMessage" class="mt-2 text-sm"></div>
        </div>
        <!-- Footer -->
        <div class="p-6 border-t border-gray-200 flex justify-end space-x-3">
            <button onclick="closeModal('forgotModal')"
                    class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200">
                Hủy
            </button>
            <button onclick="sendForgotPassword()"
                    class="btn-primary px-4 py-2 text-white rounded-lg">
                Gửi mật khẩu tạm
            </button>
        </div>
    </div>
</div>

<script>
    function sendForgotPassword() {
        const email = document.getElementById('forgotEmail').value.trim();
        const message = document.getElementById('forgotMessage');

        if (!email) {
            message.innerText = "Vui lòng nhập email!";
            message.className = "text-red-600 text-sm mt-2";
            return;
        }

        $.ajax({
            url: '/QuanLy/Account/ForgotPassword',
            type: 'POST',
            data: { email: email },
            success: function (res) {
                closeModal('forgotModal'); // đóng modal sau khi gửi thành công
                showNotification(res.message, 'success'); // thông báo góc phải
            },
            error: function (xhr) {
                let msg = xhr.responseJSON?.message || xhr.responseText || 'Có lỗi xảy ra!';
                message.innerText = msg;
                message.className = "text-red-600 text-sm mt-2";
            }
        });
    }
</script>
