﻿@{
Layout = null; // không dùng layout quản lý khi đang đăng ký
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hệ thống Quản lý Phòng trọ</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/quanly.css">
    <script src="~/js/quanly.js"></script>
</head>
<body>
    <div id="registerPage" class="login-container flex items-center justify-center p-4">
        <div class="login-card rounded-2xl shadow-2xl p-8 w-full max-w-md bounce-in">
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-600 rounded-full mb-4">
                    <i class="fas fa-user-plus text-white text-2xl"></i>
                </div>
                <h1 class="text-3xl font-bold text-gray-800 mb-2">Đăng ký tài khoản</h1>
                <p class="text-gray-600">Tạo tài khoản mới để bắt đầu</p>
            </div>

            @* form post về Account/Register *@
            <form id="registerForm" asp-area="QuanLy" asp-controller="Account" asp-action="Register" method="post" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Họ và tên</label>
                    <input name="FullName" type="text" class="form-input w-full px-4 py-3 rounded-lg focus:outline-none" placeholder="Nhập họ và tên" required />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Số điện thoại</label>
                    <input name="Phone" type="tel" class="form-input w-full px-4 py-3 rounded-lg focus:outline-none" placeholder="Nhập số điện thoại" required />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                    <input name="Email" type="email" class="form-input w-full px-4 py-3 rounded-lg focus:outline-none" placeholder="Nhập email" required />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">CCCD</label>
                    <input name="CCCD" type="text" class="form-input w-full px-4 py-3 rounded-lg focus:outline-none" placeholder="Nhập số CCCD" required />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Tên đăng nhập</label>
                    <input name="Username" type="text" class="form-input w-full px-4 py-3 rounded-lg focus:outline-none" placeholder="Nhập tên đăng nhập" required />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Mật khẩu</label>
                    <div class="relative">
                        <input name="Password" type="password" id="registerPassword" class="form-input w-full px-4 py-3 rounded-lg focus:outline-none pr-12" placeholder="Nhập mật khẩu" required />
                        <button type="button" onclick="togglePassword('registerPassword')" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-gray-700">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Xác nhận mật khẩu</label>
                    <div class="relative">
                        <input name="ConfirmPassword" type="password" id="confirmPassword" class="form-input w-full px-4 py-3 rounded-lg focus:outline-none pr-12" placeholder="Nhập lại mật khẩu" required />
                        <button type="button" onclick="togglePassword('confirmPassword')" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-gray-700">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>
                <div class="flex items-center">
                    <input type="checkbox" name="AcceptTerms" value="true" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" required />
                    <span class="ml-2 text-sm text-gray-600">
                        Tôi đồng ý với
                        <a href="#" class="text-blue-600 hover:text-blue-800">Điều khoản sử dụng</a>
                    </span>
                </div>

                <button type="submit" class="btn-primary w-full py-3 text-white font-semibold rounded-lg">
                    <i class="fas fa-user-plus mr-2"></i>Đăng ký
                </button>

                <div class="text-center">
                    <span class="text-gray-600">Đã có tài khoản? </span>
                    <a href="/QuanLy/Account/Login" class="text-blue-600 hover:text-blue-800 font-medium">Đăng nhập ngay</a>
                </div>
            </form>
        </div>
    </div>

    @await Html.PartialAsync("~/Areas/QuanLy/Views/Account/ConfirmOTPregistration.cshtml")
</body>
</html>
