<!-- Modal Thêm Thu -->
<div id="incomeModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4 modal-backdrop">
    <div class="bg-white rounded-xl max-w-md w-full max-h-[90vh] overflow-y-auto bounce-in">
        <div class="p-6 border-b border-gray-200">
            <div class="flex items-center justify-between">
                <h3 class="text-lg font-semibold text-gray-800">Ghi nhận Thu</h3>
                <button onclick="closeModal('incomeModal')" class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
        </div>

        <div class="p-6">
            <form id="incomeForm" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Nội dung *</label>
                    <input type="text" name="noiDung" class="form-input w-full px-3 py-2 rounded-lg focus:outline-none" placeholder="Ví dụ: Thu tiền điện" required>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Số tiền (VNĐ) *</label>
                    <input type="number" name="soTien" class="form-input w-full px-3 py-2 rounded-lg focus:outline-none" placeholder="500000" required>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Ngày</label>
                    <input type="date" name="ngay" class="form-input w-full px-3 py-2 rounded-lg focus:outline-none">
                </div>
            </form>
        </div>

        <div class="p-6 border-t border-gray-200 flex justify-end space-x-3">
            <button onclick="closeModal('incomeModal')" class="px-4 py-2 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors">Hủy</button>
            <button onclick="saveIncome()" class="btn-primary px-4 py-2 text-white rounded-lg">Lưu</button>
        </div>
    </div>
</div>    

