@model IEnumerable<QuanLyPhongTro.Models.ThongBao>

<div id="notificationsPage" class="page-content">
    <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Thông báo & Liên hệ</h2>
        <p class="text-gray-600">Xem thông báo và gửi yêu cầu đến chủ trọ</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">

        <!-- 🔵 Danh sách thông báo -->
        <div class="bg-white rounded-xl shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Thông báo từ chủ trọ</h3>

            @if (Model != null && Model.Any())
            {
                foreach (var tb in Model)
                {
                    <div class="border-l-4 border-blue-500 pl-4 py-2 mb-3">
                        <div class="flex justify-between items-start">
                            <p class="text-gray-800">@tb.NoiDung</p>
                            <span class="text-xs text-gray-500">@tb.NgayGui.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-gray-500">Chưa có thông báo nào.</p>
            }
        </div>

        <!-- 🟢 Form gửi yêu cầu -->
        <div class="bg-white rounded-xl shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Gửi yêu cầu / Kiến nghị</h3>

            <form id="contactForm" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Loại yêu cầu</label>
                    <select id="loaiYeuCau" class="w-full px-4 py-3 border border-gray-300 rounded-lg">
                        <option value="Khac" selected>Khác</option>
                        <option value="DichVu">Dịch vụ</option>
                        <option value="HopDong">Hợp đồng</option>
                        <option value="ThanhToan">Thanh toán</option>
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Nội dung chi tiết</label>
                    <textarea id="noiDung" rows="4"
                              class="w-full px-4 py-3 border border-gray-300 rounded-lg"
                              placeholder="Nhập nội dung yêu cầu..."></textarea>
                </div>

                <button type="button" id="btnGuiYeuCau"
                        class="w-full bg-blue-600 text-white py-3 rounded-lg font-medium hover:bg-blue-700 transition">
                    <i class="fas fa-paper-plane mr-2"></i>Gửi yêu cầu
                </button>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById("btnGuiYeuCau").addEventListener("click", function () {
        const noiDung = document.getElementById("noiDung").value.trim();
        const loai = document.getElementById("loaiYeuCau").value;

        if (!noiDung) {
            showNotification("Vui lòng nhập nội dung yêu cầu!", "error");
            return;
        }

        fetch("/KhachThue/ThongBaoLienHe/GuiYeuCau", {
            method: "POST",
            headers: { "Content-Type": "application/x-www-form-urlencoded" },
            body: `noiDung=${encodeURIComponent(noiDung)}&loai=${encodeURIComponent(loai)}`
        })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    showNotification(data.message, "success");

                    // ✅ Làm mới form sau khi gửi thành công
                    const form = document.getElementById("contactForm");
                    form.reset();

                    // (Tuỳ chọn) Đưa lại focus vào ô nhập nội dung
                    document.getElementById("noiDung").focus();  
                } else {
                    showNotification(data.message, "error");
                }
            })
            .catch(() => {
                showNotification("Có lỗi xảy ra khi gửi yêu cầu!", "error");
            });
    });
</script>