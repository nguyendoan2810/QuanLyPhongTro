<!-- Modal gia hạn hợp đồng -->
<div id="extendModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
    <div class="bg-white rounded-xl p-6 w-full max-w-md shadow-lg">
        <h3 class="text-xl font-bold text-gray-800 mb-4">Yêu cầu gia hạn hợp đồng</h3>
        <form id="extendForm">
            <input type="hidden" name="MaHopDong" id="extendMaHopDong" />
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">Ngày bắt đầu</label>
                <input type="text" id="extendStartDate" class="w-full px-4 py-2 border rounded-lg bg-gray-100" readonly />
            </div>
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">Số tháng gia hạn</label>
                <input type="number" name="SoThang" min="1" max="12" required class="w-full px-4 py-2 border rounded-lg" />
            </div>
            <div class="flex justify-end space-x-3">
                <button type="button" onclick="closeExtendModal()" class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600">Hủy</button>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Gửi yêu cầu</button>
            </div>
        </form>
    </div>
</div>

<script>
    // helper: parse dd/MM/yyyy -> Date object
    function parseDDMMYYYY(str) {
        // expects "dd/MM/yyyy"
        const parts = str.split('/');
        if (parts.length !== 3) return null;
        const d = parseInt(parts[0], 10);
        const m = parseInt(parts[1], 10) - 1; // month 0-based
        const y = parseInt(parts[2], 10);
        return new Date(y, m, d);
    }

    // helper: format Date -> dd/MM/yyyy
    function formatDDMMYYYY(date) {
        const dd = String(date.getDate()).padStart(2, '0');
        const mm = String(date.getMonth() + 1).padStart(2, '0');
        const yyyy = date.getFullYear();
        return `${dd}/${mm}/${yyyy}`;
    }

    document.querySelectorAll(".extend-contract-btn").forEach(btn => {
        btn.addEventListener("click", function () {
            const row = btn.closest("tr");

            // lấy cell mã hợp đồng (đã định dạng HĐ0005)
            let maHopDongText = row.querySelector("td").textContent || "";
            // loại bỏ mọi ký tự không phải số để lấy số nguyên (HĐ0005 -> 5)
            const maHopDongDigits = maHopDongText.replace(/\D/g, "");
            const maHopDong = parseInt(maHopDongDigits, 10);

            // lấy ngày kết thúc (cell thứ 5 index bắt đầu từ 0)
            const ngayKetThucText = row.children[5].textContent.trim(); // dd/MM/yyyy

            // parse và +1 ngày để hiển thị là ngày bắt đầu gia hạn
            const ketThucDate = parseDDMMYYYY(ngayKetThucText);
            let startDateText = "";
            if (ketThucDate) {
                const startDate = new Date(ketThucDate.getTime());
                startDate.setDate(startDate.getDate() + 1); // +1 ngày
                startDateText = formatDDMMYYYY(startDate);
            } else {
                startDateText = ngayKetThucText; // fallback
            }

            document.getElementById("extendMaHopDong").value = maHopDong; // số nguyên
            document.getElementById("extendStartDate").value = startDateText;
            document.getElementById("extendModal").classList.remove("hidden");
        });
    });

    function closeExtendModal() {
        document.getElementById("extendModal").classList.add("hidden");
    }

    document.getElementById("extendForm").addEventListener("submit", function (e) {
        e.preventDefault();

        const formData = new FormData(this);

        fetch("/KhachThue/HopDongKhachThue/GiaHan", {
            method: "POST",
            body: formData
        })
        .then(res => res.ok ? res.text() : Promise.reject())
        .then(msg => {
            showNotification("Yêu cầu gia hạn đã được gửi!", "success");
            closeExtendModal();
        })
        .catch(() => {
            showNotification("Gửi yêu cầu thất bại!", "error");
        });
    });
</script>