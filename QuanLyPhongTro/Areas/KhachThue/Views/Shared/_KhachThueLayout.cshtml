<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hệ thống Quản lý Phòng Trọ - Khách thuê</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/khachthue.css">
</head>
<body class="bg-gray-50">
    <!-- Login Page -->
    <div id="loginPage" class="min-h-screen gradient-bg flex items-center justify-center p-4">
        <div class="bg-white rounded-2xl shadow-2xl p-8 w-full max-w-md">
            <div class="text-center mb-8">
                <div class="bg-blue-600 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-home text-white text-2xl"></i>
                </div>
                <h1 class="text-2xl font-bold text-gray-800">Quản lý Phòng Trọ</h1>
                <p class="text-gray-600 mt-2">Đăng nhập dành cho khách thuê</p>
            </div>

            <form id="loginForm" class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Tên đăng nhập</label>
                    <input type="text" id="username" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Nhập tên đăng nhập" required>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Mật khẩu</label>
                    <input type="password" id="password" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Nhập mật khẩu" required>
                </div>

                <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg font-medium hover:bg-blue-700 transition duration-200">
                    Đăng nhập
                </button>
            </form>
        </div>
    </div>

    <!-- Main App -->
    <div id="mainApp" class="hidden min-h-screen bg-gray-50">
        <!-- Header -->
        <header class="bg-white shadow-sm border-b border-gray-200 fixed w-full top-0 z-40">
            <div class="flex items-center justify-between px-4 py-3">
                <div class="flex items-center">
                    <button id="sidebarToggle" class="lg:hidden p-2 rounded-md hover:bg-gray-100">
                        <i class="fas fa-bars text-gray-600"></i>
                    </button>
                    <div class="flex items-center ml-2">
                        <div class="bg-blue-600 w-8 h-8 rounded-lg flex items-center justify-center">
                            <i class="fas fa-home text-white text-sm"></i>
                        </div>
                        <h1 class="ml-3 text-xl font-semibold text-gray-800">Quản lý Phòng Trọ</h1>
                    </div>
                </div>

                <div class="flex items-center space-x-4">
                    <div class="flex items-center space-x-3">
                        <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-user text-blue-600 text-sm"></i>
                        </div>
                        <span class="hidden sm:block text-sm font-medium text-gray-700">Nguyễn Văn A</span>
                    </div>
                    <button id="logoutBtn" class="bg-red-500 text-white px-4 py-2 rounded-lg text-sm hover:bg-red-600 transition duration-200">
                        <i class="fas fa-sign-out-alt mr-2"></i>Đăng xuất
                    </button>
                </div>
            </div>
        </header>

        <!-- Sidebar -->
        <aside id="sidebar" class="fixed left-0 top-16 h-full w-64 bg-white shadow-lg transform -translate-x-full lg:translate-x-0 sidebar-transition z-30">
            <nav class="p-4">
                <ul class="space-y-2">
                    <li>
                        <button class="nav-item w-full text-left px-4 py-3 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition duration-200 bg-blue-50 text-blue-600" data-page="dashboard">
                            <i class="fas fa-tachometer-alt mr-3"></i>Dashboard
                        </button>
                    </li>
                    <li>
                        <button class="nav-item w-full text-left px-4 py-3 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition duration-200 text-gray-700" data-page="profile">
                            <i class="fas fa-user mr-3"></i>Thông tin cá nhân
                        </button>
                    </li>
                    <li>
                        <button class="nav-item w-full text-left px-4 py-3 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition duration-200 text-gray-700" data-page="contracts">
                            <i class="fas fa-file-contract mr-3"></i>Hợp đồng thuê
                        </button>
                    </li>
                    <li>
                        <button class="nav-item w-full text-left px-4 py-3 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition duration-200 text-gray-700" data-page="bills">
                            <i class="fas fa-receipt mr-3"></i>Hóa đơn
                            <span class="notification-dot bg-red-500 text-white text-xs px-2 py-1 rounded-full ml-2">2</span>
                        </button>
                    </li>
                    <li>
                        <button class="nav-item w-full text-left px-4 py-3 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition duration-200 text-gray-700" data-page="notifications">
                            <i class="fas fa-bell mr-3"></i>Thông báo & Liên hệ
                            <span class="notification-dot bg-red-500 text-white text-xs px-2 py-1 rounded-full ml-2">3</span>
                        </button>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        @RenderBody()
    </div>

    <!-- Overlay for mobile sidebar -->
    <div id="sidebarOverlay" class="fixed inset-0 bg-black bg-opacity-50 z-20 hidden lg:hidden"></div>

