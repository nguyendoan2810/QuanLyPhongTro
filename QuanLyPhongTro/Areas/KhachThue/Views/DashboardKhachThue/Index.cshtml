@model QuanLyPhongTro.Areas.KhachThue.ViewComponents.DashboardKhachThueViewModel

<div id="dashboardPage" class="page-content fade-in">
    <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Dashboard</h2>
        <p class="text-gray-600">Tổng quan thông tin của bạn</p>
    </div>

    <!-- Cards thống kê -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Phòng hiện tại -->
        <div class="bg-white p-6 rounded-xl shadow-sm card-hover">
            <div class="flex items-center">
                <div class="bg-blue-100 p-3 rounded-lg">
                    <i class="fas fa-home text-blue-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-600">Phòng hiện tại</p>
                    <p class="text-xl font-semibold text-gray-800">@Model.TenPhong</p>
                    <p class="text-sm text-gray-500">@Model.DiaChi</p>
                </div>
            </div>
        </div>

        <!-- Trạng thái hợp đồng -->
        <div class="bg-white p-6 rounded-xl shadow-sm card-hover">
            <div class="flex items-center">
                <div class="bg-green-100 p-3 rounded-lg">
                    <i class="fas fa-file-contract text-green-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-600">Trạng thái hợp đồng</p>
                    <p class="text-xl font-semibold @(Model.TrangThaiHopDong == "Đã kết thúc" ? "text-red-600" : "text-green-600")">
                        @Model.TrangThaiHopDong
                    </p>
                </div>
            </div>
        </div>

        <!-- Hóa đơn chưa thanh toán -->
        <div class="bg-white p-6 rounded-xl shadow-sm card-hover">
            <div class="flex items-center">
                <div class="bg-red-100 p-3 rounded-lg">
                    <i class="fas fa-receipt text-red-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-600">Hóa đơn chưa thanh toán</p>
                    <p class="text-xl font-semibold text-red-600">@Model.SoHoaDonChuaThanhToan</p>
                </div>
            </div>
        </div>

        <!-- Thông báo mới -->
        <div class="bg-white p-6 rounded-xl shadow-sm card-hover">
            <div class="flex items-center">
                <div class="bg-yellow-100 p-3 rounded-lg">
                    <i class="fas fa-bell text-yellow-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-600">Thông báo mới</p>
                    <p class="text-xl font-semibold text-yellow-600">@Model.SoThongBaoMoi</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Danh sách thông báo nhanh -->
    <div class="bg-white rounded-xl shadow-sm p-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Thông báo nhanh</h3>

        @if (Model != null && Model.DanhSachThongBao != null && Model.DanhSachThongBao.Any())
        {
            <div class="space-y-3">
                @foreach (var tb in Model.DanhSachThongBao)
                {
                    <div class="flex items-start p-3 bg-yellow-50 rounded-lg">
                        <i class="fas fa-info-circle text-yellow-600 mt-1 mr-3"></i>
                        <div>
                            <p class="font-medium text-gray-800">@tb.NoiDung</p>
                            <p class="text-sm text-gray-600">@tb.NgayGui.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-gray-500">Không có thông báo mới trong 5 ngày gần nhất.</p>
        }
    </div>
</div>