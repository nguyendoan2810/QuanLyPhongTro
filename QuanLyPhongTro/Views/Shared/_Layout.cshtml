<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Cho Thuê Phòng Trọ</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .room-card {
            transition: all 0.3s ease;
        }

            .room-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 20px 25px -5px rgba(0,0,0,0.1);
            }

        .room-image {
            transition: transform 0.3s ease;
        }

        .room-card:hover .room-image {
            transform: scale(1.03);
        }

        [x-cloak] {
            display: none !important;
        }
    </style>
</head>

<body x-data="{ showLoginModal: false }" class="bg-gray-50 min-h-screen flex flex-col">
    <!-- Header -->
    <header class="bg-white shadow-sm fixed top-0 left-0 right-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <h1 class="text-xl font-bold text-blue-600">
                    <a href="/">🏠 Cho thuê phòng trọ</a>
                </h1>

                <!-- Nút mở modal -->
                <button @@click ="showLoginModal = true"
                        class="bg-blue-600 hover:bg-blue-500 text-white px-6 py-2 rounded-full font-medium transition">
                    Đăng nhập
                </button>
            </div>
        </div>
    </header>

    <!-- Main -->
    <main class="pt-20 pb-16 flex-grow">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-slate-900 text-slate-300 mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 text-center space-y-2">
            <p>🏠 © 2025 - Hệ thống Cho Thuê Phòng Trọ</p>
            <p>
                Liên hệ: <span class="text-blue-400">quanlyphongtro@gmail.com</span> |
                Hotline: <span class="text-blue-400">0909 123 456</span>
            </p>
        </div>
    </footer>

    <!-- Modal chọn loại đăng nhập -->
    <div x-show="showLoginModal"
         x-transition.opacity
         x-cloak
         @@click.self ="showLoginModal = false"
         class="fixed inset-0 flex items-center justify-center bg-black/50 backdrop-blur-sm z-[1000]">
        <div x-transition.scale
             class="bg-white rounded-2xl shadow-2xl w-full max-w-md p-8 text-center relative">
            <!-- Nút đóng -->
            <button @@click ="showLoginModal = false"
                    class="absolute top-3 right-3 text-gray-500 hover:text-gray-700 text-xl">
                ✕
            </button>

            <!-- Tiêu đề -->
            <h2 class="text-2xl font-bold text-blue-600 mb-4">Chọn loại đăng nhập</h2>
            <p class="text-gray-600 mb-8">Vui lòng chọn vai trò để tiếp tục đăng nhập vào hệ thống.</p>

            <!-- Hai nút lựa chọn -->
            <div class="space-y-4">
                <a href="/KhachThue/AccountKhachThue/Login"
                   class="block w-full bg-green-600 hover:bg-green-500 text-white py-3 rounded-lg font-medium transition shadow-sm hover:shadow-md">
                    👤 Đăng nhập Khách thuê
                </a>
                <a href="/QuanLy/Account/Login"
                   class="block w-full bg-blue-600 hover:bg-blue-500 text-white py-3 rounded-lg font-medium transition shadow-sm hover:shadow-md">
                    🏢 Đăng nhập Quản lý
                </a>
            </div>
        </div>
    </div>

    <!-- Alpine.js -->
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>

    @RenderSection("Scripts", required: false)
</body>
</html>