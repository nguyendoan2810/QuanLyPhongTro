@model IEnumerable<QuanLyPhongTro.Models.Phong>
@{
    ViewData["Title"] = "Danh sách phòng trọ";
}

<!-- HERO -->
<section class="bg-gradient-to-r from-purple-500 to-pink-500 text-white py-16 text-center">
    <h2 class="text-4xl font-bold mb-3 drop-shadow-lg">Tìm Phòng Trọ Phù Hợp Với Bạn</h2>
    <p class="text-lg opacity-90">danh sách phòng trọ chất lượng, chính chủ</p>
</section>

<!-- BỘ LỌC GIÁ -->
<form method="get" asp-action="Index"
      class="bg-white rounded-2xl shadow-xl p-6 mb-8 max-w-4xl mx-auto -mt-10 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">

        <div>
            <label class="font-medium text-gray-700">Giá từ</label>
            <input type="number" name="giaTu" value="@ViewBag.GiaTu"
                   class="w-full mt-2 px-4 py-3 border rounded-xl focus:ring-purple-400">
        </div>

        <div>
            <label class="font-medium text-gray-700">Giá đến</label>
            <input type="number" name="giaDen" value="@ViewBag.GiaDen"
                   class="w-full mt-2 px-4 py-3 border rounded-xl focus:ring-purple-400">
        </div>

        <div class="flex items-end">
            <button class="btn-primary w-full py-3 rounded-xl font-semibold">
                🔍 Lọc giá
            </button>
        </div>
    </div>
</form>

<!-- DANH SÁCH PHÒNG -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 px-6 pb-12">
    @foreach (var phong in Model)
    {
        <div class="room-card bg-white rounded-2xl overflow-hidden shadow-md">
            <div class="h-48 overflow-hidden">
                <img src="~/images/anh_tro_mau.jpg"
                     class="room-img w-full h-full object-cover transition duration-300">
            </div>

            <div class="p-6 space-y-3">
                <p class="font-semibold text-gray-800 text-lg flex items-center gap-2">
                    📍 Địa chỉ: @phong.ChiTietPhong?.DiaChi
                </p>

                <h3 class="text-sm text-gray-600">Số phòng: @phong.TenPhong</h3>

                <div class="grid grid-cols-3 gap-2 text-sm text-gray-600">
                    <p>🏢 Tầng: <b>@phong.ChiTietPhong?.Tang</b></p>
                    <p>📐 Diện tích: @phong.ChiTietPhong?.DienTich m²</p>
                    <p>🛏️ Loại phòng: @phong.ChiTietPhong?.LoaiPhong</p>
                </div>

                <p class="text-gray-500 text-sm line-clamp-3">@phong.ChiTietPhong?.MoTa</p>

                <p class="text-xl font-bold text-pink-600">
                    @phong.GiaPhong.ToString("N0") VNĐ / tháng
                </p>

                <div class="flex justify-between pt-2 text-sm text-gray-700">
                    <span>👤 @phong.MaChuTroNavigation?.HoTen</span>
                    <span class="text-purple-600 font-semibold">📞 @phong.MaChuTroNavigation?.SoDienThoai</span>
                </div>
            </div>
        </div>
    }

    @if (!Model.Any())
    {
        <p class="col-span-3 text-center py-8 text-gray-500 text-lg">
            Không tìm thấy phòng phù hợp.
        </p>
    }
</div>