@model IEnumerable<QuanLyPhongTro.Models.Phong>
@{
    ViewData["Title"] = "Danh sách phòng trọ";
}

<!-- Title -->
<div class="text-center mb-8">
    <h2 class="text-3xl font-bold text-blue-600 mb-2">Danh sách phòng trọ đang trống</h2>
    <p class="text-gray-600">Tìm kiếm phòng trọ phù hợp với ngân sách của bạn</p>
</div>

<!-- Bộ lọc -->
<form method="get" asp-action="Index" class="bg-white rounded-2xl shadow-lg p-6 mb-8 max-w-4xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Giá từ</label>
            <div class="relative">
                <span class="absolute left-3 top-3 text-gray-500">₫</span>
                <input type="number" name="giaTu" value="@ViewBag.GiaTu"
                       placeholder="1.000.000"
                       class="w-full pl-8 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
            </div>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Giá đến</label>
            <div class="relative">
                <span class="absolute left-3 top-3 text-gray-500">₫</span>
                <input type="number" name="giaDen" value="@ViewBag.GiaDen"
                       placeholder="5.000.000"
                       class="w-full pl-8 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
            </div>
        </div>

        <div class="flex items-end">
            <button type="submit"
                    class="w-full bg-blue-600 hover:bg-blue-500 text-white px-6 py-3 rounded-lg font-medium transition">
                💸 Lọc theo giá
            </button>
        </div>
    </div>
</form>

<!-- Danh sách phòng -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    @foreach (var phong in Model)
    {
        <div class="room-card bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition duration-300">
            <!-- Ảnh phòng -->
            <div class="relative h-48 overflow-hidden">
                <img src="~/images/phong_default.jpg" alt="@phong.TenPhong"
                     class="room-image w-full h-full object-cover hover:scale-105 transition duration-300">
            </div>

            <!-- Thông tin phòng -->
            <div class="p-6">
                <!-- 📍 Địa chỉ (in đậm, nổi bật) -->
                <p class="text-base font-bold text-gray-800 mb-1 flex items-center gap-2">
                    📍 <span>@phong.ChiTietPhong?.DiaChi</span>
                </p>

                <!-- 🏠 Tên phòng (nhẹ, không đậm) -->
                <h3 class="text-sm text-gray-600 mb-3">@phong.TenPhong</h3>

                <!-- Thông tin cơ bản -->
                <div class="space-y-2 mb-4">
                    <div class="flex gap-4 text-sm text-gray-600">
                        <span>🏢 <b>Tầng:</b> @phong.ChiTietPhong?.Tang</span>
                        <span>📐 <b>Diện tích:</b> @phong.ChiTietPhong?.DienTich m²</span>
                        <span>🛏️ <b>Loại:</b> @phong.ChiTietPhong?.LoaiPhong</span>
                    </div>
                </div>

                <!-- Mô tả -->
                <p class="text-sm text-gray-500 mb-4 line-clamp-3">@phong.ChiTietPhong?.MoTa</p>

                <!-- Giá -->
                <div class="flex justify-between items-center">
                    <p class="text-xl font-bold text-red-600">@phong.GiaPhong.ToString("N0") VNĐ / tháng</p>
                </div>

                <!-- Chủ trọ & SĐT -->
                <div class="flex justify-between items-center mt-3">
                    <p class="text-sm text-gray-700 flex items-center gap-1">
                        👤 @phong.MaChuTroNavigation?.HoTen
                    </p>
                    <p class="text-sm font-semibold text-blue-600 flex items-center gap-1">
                        📞 <span>@phong.MaChuTroNavigation?.SoDienThoai</span>
                    </p>
                </div>
            </div>
        </div>
    }
    @if (!Model.Any())
    {
        <p class="text-center text-gray-500 col-span-3 py-8">Không tìm thấy phòng nào phù hợp.</p>
    }
</div>